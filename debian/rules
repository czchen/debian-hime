override_dh_auto_install:
	$(MAKE) install
	mkdir -p debian/hime/usr/lib/gtk-2.0/$(GTKVER)/immodules
	mv debian/hime/usr/lib/gtk-2.0/immodules/* debian/hime/usr/lib/gtk-2.0/$(GTKVER)/immodules/
	mkdir -p debian/hime/usr/lib/gtk-3.0/$(GTKVER)/immodules
	mv debian/hime/usr/lib/gtk-3.0/immodules/* debian/hime/usr/lib/gtk-3.0/$(GTKVER)/immodules/

override_dh_installchangelogs:
	dh_installchangelogs Changelog.html

